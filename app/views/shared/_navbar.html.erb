      </div>
    <% else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-cta" %>
      <hr class="hidden-xs hidden-sm">
      <%= link_to t(".sign_in", default: "Create account"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-cta" %>
    <% end %>
    <hr>
    <% if user_signed_in? %>
      <%= link_to t(".top_call_to_action", default: "Got to My Dashboard"), documents_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% else %>
      <%= link_to t(".top_call_to_action", default: "Try Lexy for free"), documents_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
