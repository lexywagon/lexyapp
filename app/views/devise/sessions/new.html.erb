<div class="container log-in">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h2>Welcome back to Lexy</h2>
      <h4>Please take a moment to log in</h4>
    </div>
  <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, hint: "Type in your email address" %>
        <%= f.input :password, required: false, hint: "Type in your password" %>
        <%= f.input :remember_me, as: :boolean, label: "Please remember me", hint: "Please check this box only if you have a restricted access to your device" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Go to My Dashboard", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
    <div class="panel-footer panel-footer-custom">
          <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
